# Environment Variables Template for Racer Marketplace
# Copy this file to .env and fill in your actual values

# ============================================================================
# APP CONFIGURATION
# ============================================================================

# App Environment (development, staging, production)
EXPO_PUBLIC_ENV=development

# App Version
EXPO_PUBLIC_APP_VERSION=1.0.0

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================

# Supabase Project URL
EXPO_PUBLIC_SUPABASE_URL=your_supabase_url_here

# Supabase Anonymous Key (Public - Safe to expose)
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (Private - Keep secret)
# Only use this in server-side code or secure environments
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================

# Sentry Error Tracking
EXPO_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Firebase Analytics
EXPO_PUBLIC_FIREBASE_ANALYTICS_ID=your-firebase-analytics-id

# Firebase Performance Monitoring
EXPO_PUBLIC_FIREBASE_PERFORMANCE_ID=your-firebase-performance-id

# ============================================================================
# IMAGE & STORAGE
# ============================================================================

# Image CDN URL (Optional - for image optimization)
EXPO_PUBLIC_IMAGE_CDN_URL=https://your-cdn.com

# Cloudinary Configuration (Optional - for image processing)
EXPO_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
EXPO_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# ============================================================================
# MAPS & LOCATION
# ============================================================================

# Google Maps API Key
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Mapbox API Key (Alternative to Google Maps)
EXPO_PUBLIC_MAPBOX_API_KEY=your-mapbox-api-key

# ============================================================================
# PUSH NOTIFICATIONS
# ============================================================================

# Expo Push Notifications
EXPO_PUBLIC_EXPO_PUSH_TOKEN=your-expo-push-token

# Firebase Cloud Messaging
EXPO_PUBLIC_FIREBASE_MESSAGING_ID=your-firebase-messaging-id

# ============================================================================
# PAYMENT PROCESSING
# ============================================================================

# Stripe Configuration
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# PayPal Configuration
EXPO_PUBLIC_PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET=your-paypal-secret

# ============================================================================
# SOCIAL AUTHENTICATION
# ============================================================================

# Google OAuth
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple OAuth
EXPO_PUBLIC_APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# Facebook OAuth
EXPO_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ============================================================================
# EMAIL & COMMUNICATION
# ============================================================================

# SendGrid Email Service
SENDGRID_API_KEY=your-sendgrid-api-key
EXPO_PUBLIC_SENDGRID_FROM_EMAIL=noreply@yourapp.com

# Twilio SMS Service
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
EXPO_PUBLIC_TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# SECURITY & ENCRYPTION
# ============================================================================

# Encryption Key (for sensitive data)
ENCRYPTION_KEY=your-32-character-encryption-key

# JWT Secret (for custom JWT tokens)
JWT_SECRET=your-jwt-secret-key

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/Disable Features
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_ERROR_REPORTING=true
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_LOCATION_SERVICES=true
EXPO_PUBLIC_ENABLE_CAMERA_FEATURES=true

# ============================================================================
# API RATE LIMITING
# ============================================================================

# Rate Limiting Configuration
EXPO_PUBLIC_RATE_LIMIT_ENABLED=true
EXPO_PUBLIC_RATE_LIMIT_MAX_REQUESTS=60
EXPO_PUBLIC_RATE_LIMIT_WINDOW_MS=60000

# ============================================================================
# CACHING & PERFORMANCE
# ============================================================================

# Cache Configuration
EXPO_PUBLIC_CACHE_ENABLED=true
EXPO_PUBLIC_CACHE_TTL=300000
EXPO_PUBLIC_IMAGE_CACHE_TTL=86400000

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Development Server URL (for local development)
EXPO_PUBLIC_DEV_SERVER_URL=http://localhost:8081

# Mock Data (for testing)
EXPO_PUBLIC_ENABLE_MOCK_DATA=false

# Debug Mode
EXPO_PUBLIC_DEBUG_MODE=false

# ============================================================================
# NOTES
# ============================================================================

# 1. All EXPO_PUBLIC_* variables are exposed to the client and should be safe to share
# 2. Variables without EXPO_PUBLIC_ prefix are server-side only and should be kept secret
# 3. Replace 'your-*' values with actual credentials from your service providers
# 4. Use different values for development, staging, and production environments
# 5. Never commit actual secrets to version control
# 6. Use environment-specific .env files: .env.development, .env.staging, .env.production 

# SMS Provider Configuration (for phone verification)
EXPO_PUBLIC_SMS_API_KEY=your_sms_api_key_here
EXPO_PUBLIC_SMS_SENDER_ID=OMNIMKT
EXPO_PUBLIC_SMS_FLOW_ID=your_sms_flow_id_here

# Optional: SMS Provider Selection
# Supported providers: MSG91, TextLocal, 2Factor, KAPSYSTEM, Netcore, Twilio
EXPO_PUBLIC_SMS_PROVIDER=MSG91

# Development Settings
EXPO_PUBLIC_DEV_MODE=true
EXPO_PUBLIC_ENABLE_SMS_LOGGING=true 